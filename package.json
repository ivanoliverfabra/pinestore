{
  "name": "pinestore",
  "version": "1.0.0",
  "description": "A TypeScript client library for interacting with the Pinestore API, offering type-safe access to projects and packages.",
  "license": "MIT",
  "keywords": [
    "typescript",
    "client",
    "pinestore",
    "api",
    "project-management",
    "package-manager",
    "esm",
    "cjs"
  ],
  "author": {
    "name": "Ivan Oliver Fabra",
    "email": "ivan@iofabra.cc",
    "url": "https://github.com/ivanoliverfabra"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivanoliverfabra/pinestore.git"
  },
  "bugs": {
    "url": "https://github.com/ivanoliverfabra/pinestore/issues"
  },
  "homepage": "https://github.com/ivanoliverfabra/pinestore#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "prepublishOnly": "npm run build && npm test",
    "dev": "npm run build:esm -- --watch",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}